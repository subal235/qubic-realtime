# Realtime Platform - Environment Configuration
# Copy this file to .env and configure for your environment

# ===========================================
# Infrastructure
# ===========================================

# Qubic Network
QUBIC_NODE_URL=http://qubic-node:21841
QUBIC_CONTRACT_ADDRESS=

# Redis
REDIS_PASSWORD=
REDIS_DB_TURBOAUTH=0
REDIS_DB_TURBOROUTE=1

# Monitoring
GRAFANA_PASSWORD=admin

# ===========================================
# TurboAuth Configuration
# ===========================================

TURBOAUTH_ENV=production
TURBOAUTH_HTTP_PORT=8080
TURBOAUTH_GRPC_PORT=9090
TURBOAUTH_METRICS_PORT=2112

# Cache
TURBOAUTH_CACHE_TTL_SECONDS=300
TURBOAUTH_USE_MEMORY_CACHE=false

# Logging
TURBOAUTH_LOG_LEVEL=info
TURBOAUTH_LOG_FORMAT=json

# Metrics
TURBOAUTH_METRICS_ENABLED=true

# ===========================================
# TurboRoute Configuration
# ===========================================

TURBOROUTE_ENV=production
TURBOROUTE_HTTP_PORT=8081
TURBOROUTE_GRPC_PORT=9091
TURBOROUTE_METRICS_PORT=2113

# Logging
TURBOROUTE_LOG_LEVEL=info
TURBOROUTE_LOG_FORMAT=json

# Metrics
TURBOROUTE_METRICS_ENABLED=true

# ===========================================
# Development Overrides (optional)
# ===========================================

# Uncomment for development:
# TURBOAUTH_ENV=development
# TURBOAUTH_LOG_LEVEL=debug
# TURBOAUTH_LOG_FORMAT=pretty
# TURBOROUTE_ENV=development
# TURBOROUTE_LOG_LEVEL=debug
# TURBOROUTE_LOG_FORMAT=pretty
